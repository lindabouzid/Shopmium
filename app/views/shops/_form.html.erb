<%= form_for(shop) do |f| %>
<div class="panel panel-default">
<div class="panel-body">
  <% if shop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shop.errors.count, "error") %> prohibited this shop from being saved:</h2>

      <ul>
      <% shop.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :chain %>
    <%= f.text_field :chain, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :latitude %>
    <%= f.text_field :latitude, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :longitude %>
    <%= f.text_field :longitude, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :city %>
    <%= f.text_field :city, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :zip %>
    <%= f.number_field :zip, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :phone %>
    <%= f.text_field :phone, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :country_code %>
    <%= f.text_field :country_code, class: "form-control" %>
  </div>

  <div class="actions form-group">
    <%= f.submit class: "btn btn-success", :style => "float: right" %>
  </div>
</div>
</div>
<% end %>
