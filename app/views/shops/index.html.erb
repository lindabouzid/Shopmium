<p id="notice"><%= notice %></p>


<form action="/filter_shops" method="GET"  class="form-inline">
  <div class="panel panel-default">
    <div class="panel-heading">Shops in X radius</div>
    <div class="panel-body">
      <div class="form-group">
        <label> Latitude: </label>
        <input class="form-control"  type="text" name="latitude"><br>
      </div>
      <div class="form-group">
        <label> Longitude: </label>
        <input  class="form-control" type="text" name="longitude"><br>
      </div>
      <div class="form-group">
        <label> Radius in metres: </label>
        <input class="form-control"  type="text" name="x"><br>
      </div>
      <button class="btn btn-shopmium">Search</button>
    </div>
  </div>
</form>


<form  action="/closest_shops" method="GET"  class="form-inline">
  <div class="panel panel-default">
    <div class="panel-heading">X closest shops</div>
    <div class="panel-body">
      <div class="form-group">
        <label> Latitude: </label>
        <input class="form-control"  type="text" name="latitude"><br>
      </div>
      <div class="form-group">
        <label> Longitude: </label>
        <input  class="form-control" type="text" name="longitude"><br>
      </div>
      <div class="form-group">
        <label> X: </label>
        <input class="form-control"  type="text" name="x"><br>
      </div>
      <button class="btn btn-shopmium">Search</button>
    </div>
  </div>
</form>


<div class="btn btn-shopmium" style= "float: right; margin-right: 10px"><%= link_to ' New Shop', new_shop_path, class: "glyphicon glyphicon-shopping-cart" %></div>

